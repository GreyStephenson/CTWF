{%- liquid
  assign has_size_option = false
  if product.options contains "Size"
    assign has_size_option = true
  endif
-%}

{% if has_size_option %}
<div class="product-block">
  {%- render 'ctwf_ring_size_selector',
    block: block,
    product: product,
    form_id: form_id,
    section_id: section_id,
    option: option,
    connect_to_sizechart: connect_to_sizechart,
    sizechart_index: sizechart_index,
    size_chart: block.settings.size_chart
  -%}
</div>
{% endif %}

{%- capture size_chart_title -%}
  {{ 'labels.size_chart' | t }}{% render 'icon', name: 'size-chart' %}
{%- endcapture -%}

<div class="variant-wrapper js">
  {% comment %}
  {% if settings.size_selector_label != blank %}
  <label class="variant__label" for="size-selector">
    {{ settings.size_selector_label }}
  
    <span class="variant__label-info">
      &mdash;
      {%- render
        'tool-tip-trigger',
        title: size_chart_title,
        content: section.blocks[sizechart_index].settings.size_chart.content,
        context: 'size-chart'
      -%}
    </span>
  </label>
  {% endif %}
  {% endcomment %}
  
  <div class="size-select-wrapper custom-select-wrapper" data-custom-select-type="ring-sizes">
    <div class="size-select custom-select">
      <div class="size-select-trigger custom-select-trigger" data-selection-made="false">Select size</div>
      <div class="size-options custom-options"></div>
    </div>
  </div>
</div>