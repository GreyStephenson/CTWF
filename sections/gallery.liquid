{%- render 'section-gallery' -%}

{% schema %}
  {
    "name": "t:labels.gallery",
    "settings": [
      {
        "type": "header",
        "content": "t:labels.content"
      },
      {
        "type": "text",
        "id": "heading",
        "label": "t:labels.heading",
        "default": "Gallery"
      },
      {
        "type": "select",
        "id": "heading_size",
        "label": "t:labels.heading_size",
        "default": "h2",
        "options": [
          {
            "value": "h3",
            "label": "t:labels.sizes.small"
          },
          {
            "value": "h2",
            "label": "t:labels.sizes.medium"
          },
          {
            "value": "h1",
            "label": "t:labels.sizes.large"
          },
          {
            "value": "h0",
            "label": "t:labels.sizes.extra_large"
          }
        ]
      },
      {
        "type": "select",
        "id": "text_alignment",
        "label": "t:labels.text_alignment",
        "default": "center",
        "options": [
          {
            "value": "left",
            "label": "t:labels.alignments.left"
          },
          {
            "value": "center",
            "label": "t:labels.alignments.center"
          },
          {
            "value": "right",
            "label": "t:labels.alignments.right"
          }
        ]
      },
      {
        "type": "range",
        "id": "images_per_row",
        "label": "t:labels.images_per_row",
        "default": 5,
        "min": 2,
        "max": 5,
        "step": 1
      },
      {
        "type": "header",
        "content": "t:labels.layout"
      },
      {
        "type": "checkbox",
        "id": "full_width",
        "label": "t:actions.enable_full_width",
        "default": false
      },
      {
        "type": "checkbox",
        "id": "space_above",
        "label": "t:actions.add_top_spacing",
        "default": true
      },
      {
        "type": "checkbox",
        "id": "space_below",
        "label": "t:actions.add_bottom_spacing",
        "default": true
      },
      {
        "type": "range",
        "id": "gutter_size",
        "label": "t:labels.grid_spacing",
        "default": 20,
        "min": 0,
        "max": 40,
        "step": 1,
        "unit": "px"
      }
    ],
    "blocks": [
      {
        "type": "image",
        "name": "t:labels.image",
        "settings": [
          {
            "type": "image_picker",
            "id": "image",
            "label": "t:labels.image"
          },
          {
            "type": "select",
            "id": "image_align",
            "label": "t:labels.image_alignment",
            "default": "top",
            "options": [
              {
                "value": "top",
                "label": "t:labels.alignments.top"
              },
              {
                "value": "center",
                "label": "t:labels.alignments.center"
              },
              {
                "value": "bottom",
                "label": "t:labels.alignments.bottom"
              }
            ]
          },
          {
            "type": "select",
            "id": "image_crop",
            "label": "t:labels.image_crop",
            "default": "square",
            "options": [
              {
                "value": "none",
                "label": "t:labels.none"
              },
              {
                "value": "portrait",
                "label": "t:labels.portrait"
              },
              {
                "value": "landscape",
                "label": "t:labels.landscape"
              },
              {
                "value": "square",
                "label": "t:labels.square"
              },
              {
                "value": "rounded",
                "label": "t:labels.rounded"
              },
              {
                "value": "rounded-wave",
                "label": "t:labels.rounded_wave"
              },
              {
                "value": "rounded-top",
                "label": "t:labels.arch"
              }
            ]
          }
        ]
      },
      {
        "type": "@app"
      }
    ],
    "presets": [
      {
        "name": "t:labels.gallery",
        "blocks": [
          {
            "type": "image"
          },
          {
            "type": "image"
          },
          {
            "type": "image"
          },
          {
            "type": "image"
          },
          {
            "type": "image"
          }
        ]
      }
    ],
    "disabled_on": {
      "groups": ["header", "footer", "custom.popups"]
    }
  }
{% endschema %}
